<button class="btn btn-info" data-toggle="modal" data-target="#myModal">
    新建job
</button>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    &times;
                </button>
                <h4 class="modal-title" id="myModalLabel">
                    Job创建
                </h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" role="form" id="jobAddForm">
                    <div class="form-group">
                        <label for="jobName" class="col-sm-2 control-label">job名称</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" maxlength="25" name="jobName" id="jobName" placeholder="请输入job名称">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="jobGroup" class="col-sm-2 control-label">组名称</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" maxlength="25" name="jobGroup" id="jobGroup" placeholder="请输入job组名称">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="jobClassName" class="col-sm-2 control-label">job类名</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" maxlength="25" name="jobClassName" id="jobClassName" placeholder="请输入job全路径类名，com.xx...">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="description" class="col-sm-2 control-label">描述</label>
                        <div class="col-sm-9">
                            <textarea class="form-control" maxlength="25" rows="3" name="description" id="description"></textarea>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭
                </button>
                <button type="button" class="btn btn-info" id="saveJob">
                    保存
                </button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal -->
</div>
<script type="text/javascript" src="/misc/quartzx_js/job/job_add.js"></script>